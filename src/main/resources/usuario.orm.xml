<?xml version="1.0" encoding="UTF-8"?> 
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" 
	version="1.0"> 
    <entity class="es.mdef.gestionpreguntas.entidades.Usuario" access="FIELD">
		<table name="USUARIOS"/>
		<inheritance strategy="SINGLE_TABLE"/>
		<discriminator-value>null</discriminator-value>
		<discriminator-column name="role_user" discriminator-type="CHAR"/>
        <attributes> 
            <id name="id"> 
                <generated-value strategy="IDENTITY"/> 
            </id> 
            <basic name="nombre" optional="false"/>
          
            <basic name="username" optional="false">
				<column name="nombre_usuario" unique="true"/>
			</basic>
			
            <basic name="password" optional="false"/>
            
            
            <basic name="accountNonExpired" optional="false">
				<column name="cuenta_activa"/>
			</basic>
			
			<basic name="accountNonLocked" optional="false">
				<column name="cuenta_desbloqueada"/>
			</basic>
			
			<basic name="credentialsNonExpired" optional="false">
				<column name="credenciales_activas" unique="true"/>
			</basic>
            
            <basic name="enabled" optional="false">
				<column name="habilitada"/>
			</basic>
			
            <one-to-many name="preguntas" mapped-by="usuario"/>
        </attributes>
     </entity>
</entity-mappings>